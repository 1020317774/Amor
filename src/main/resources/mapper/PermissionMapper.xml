<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wyc.buefy.web.mapper.PermissionMapper">
    <!--用户权限列表-->
    <select id="selectList" resultType="com.wyc.buefy.web.model.entity.TbPermission">
        SELECT p.*
        FROM tb_user u,
             tb_role_permission rp,
             tb_permission p
        WHERE u.id = #{userId}
          AND u.role_id = rp.role_id
          AND rp.permission_id = p.id
    </select>
</mapper>
